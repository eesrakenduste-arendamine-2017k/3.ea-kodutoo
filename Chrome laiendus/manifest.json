
{
  "name": "Youtube Timer",
  "description": "Ytimer",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "webNavigation",
	"tabs",
	"http://*/*",
	"https://*/*"
  ],
  "content_scripts" : [{
        "matches" : [ "*://*/*"],
        "js" :  ["config.js","firebase.js","background.js"],
        "css" : ["styles.css"]
    }],
  "browser_action": {
    "default_title": "Youtube Timer" 
  },
  "manifest_version": 2
}