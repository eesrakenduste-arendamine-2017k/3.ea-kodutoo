{
  "name": "Music for concentration",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Relax to get assignements done or browse the web while
   listening soothing music and sounds. ",

   "browser_action": {
     "default_title": "Play music",
     "default_popup":"popup.html"
     },

  "permissions": [
    "activeTab",
	"tabs",
	"http://*/*",
	"https://*/*"
  ],
  "content_scripts" : [{
        "matches" : [ "*://*/*"],
        "js" : ["firebase.js","background.js"],
        "css" : ["styles.css"]
    }]



}
