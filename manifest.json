{
  "name": "Sounds for relaxing",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Relax to get assignements done or browse the web while
   listening soothing music and sounds. ",

   "browser_action": {
     "default_title": "Play music",
     "default_icon": ".png"
     },

  "permissions": [
    "activeTab",
	"tabs",
	"http://*/*",
	"https://*/*"
  ],
  "content_scripts" : [{
        "matches" : [ "*://*/*"],
        "js" : ["config.js","firebase.js","background.js"],
        "css" : ["styles.css"]
    }]



}
