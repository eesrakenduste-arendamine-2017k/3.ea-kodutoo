{
  "name": "Sitetracker",
  "description": "Saves time and visitation data.",
  "version": "1.0",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.firebase.com https://*.firebaseio.com https://*.firebaseio.com; object-src 'self'; ",


  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "clipboardRead",
    "clipboardWrite",
    "background"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "config.js",
        "firebase.js",
        "background.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Visitation statistics",
    "default_popup": "popup.html"
  }
}
