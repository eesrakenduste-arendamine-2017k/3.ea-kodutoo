{
  "name": "Sitetracker",
  "description": "Saves time and visitation data.",
  "version": "1.0",
  "manifest_version": 2,

  "permissions": [
	"activeTab",
	"tabs",
	"downloads",
	"http://*/*",
	"https://*/*"
  ],

  "content_scripts": [
	{
	  "matches": ["*://*/*"],
	  "js": ["config.js", "firebase.js", "background.js"],
	  "css": ["styles.css"]
	}
  ],

  "browser_action": {
	"default_title": "Visitation statistics",
	"default_popup": "popup.html"
  }
}
