{
  "name": "Customizer",
  "description": "Enables to customize fonts, colors of a webpage",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts" : [{
      "matches": ["http://*/*"],
      "js": ["config.js","firebase.js","background.js"]
  }],
  "browser_action": {
    "default_title": "Customize layout",
    "default_popup": "customizer.html"
  },
  "manifest_version": 2
}