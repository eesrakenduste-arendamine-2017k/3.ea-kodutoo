{
	"manifest_version": 2,

	"name": "GameTime",
	"description": "Extension, Timer, Pomodoro",
	"version": "2.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Gaming Timer"
	},
	"background": {
		"scripts": ["pomodoroState.js", "breakState.js", "moment.js", "background.js"],
		"persistent": false
	},
	"permissions": [
		"notifications"
	]
}